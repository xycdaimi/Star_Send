/* pages/geren/geren.wxss */
.title{
  width: 90%;
  font-family: 'Pmzdqst';
  color: aqua;
  font-size: 30px;
  margin-bottom: 30rpx;
}
.block{
  height: 10vh;
  width: 92%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: rgba(142, 209, 248, 0.5);
  border-radius: 10px;
}
.p{
  height: 66vh;
  position: relative;
  display:flex;
  flex-direction: column;
}
.mokuai{
  width: 90%;
  height: 12vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: yellow 1px solid;
  position: relative;
}
.mokuai text{
  margin-left: 5%;
  color: yellow;
  font-size: 27px;
}
.e{
  position: absolute;
  right: 0;
}
.mokuai image{
  height: 60%;
  width: 17%;
  position: absolute;
  right: 12%;
}
button{
  background-color: rgba(255, 255, 255, 0.1);
  border: black 2px solid;
  color: rgb(57, 133, 199);
}
.butt{
  width: 100%;
  height: 5%;
}