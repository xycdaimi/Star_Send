/* pages/shouji/shouji.wxss */
.title{
  color: rgb(66, 255, 255);
  font-family: 'Pmzdqst';
  font-size: 40px;
  margin-top: 30%;
}
.block{
  height: 5vh;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 8%;
}
.inw{
  font-family: 'Pmzdqst';
  font-size: 32px;
  color: rgb(66, 255, 255);
}
.inp{
  width: 50%;
  height: 100%;
  border: rgb(242, 250, 250) 1px solid;
  border-right: none;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
  margin: 0px auto;
  margin-left: 0px;
  margin-right: 0px;
  color: yellow;
  padding-left: 10px;
}
.cc{
  width: 37%;
}
.yan{
  color: yellow;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 auto;
  margin-left: 0px;
  height: 100%;
  width: 20%;
  border: rgb(242, 250, 250) 1px solid;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  border-left: 2px solid rgb(242, 250, 250);
}
.placeholder-style{
  color: yellow;
}
.tu{
  margin: 0 auto;
  margin-left: 0px;
  height: 100%;
  width: 8%;
  border: rgb(242, 250, 250) 1px solid;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  border-left: none;
}
.tu image{
  margin-top: 10%;
  margin-left: 0px;
  margin-right: 0px;
  height: 80%;
  width: 80%;
}
.t{
  border-radius: 20rpx;
  background-color: rgb(110, 232, 253);
  color: rgba(179, 112, 243, 0.651);
  border: black 1px solid;
}
.tiao{
  font-family: 'Pmzdqst';
  color: rgb(247, 247, 93);
  font-size: 25px;
}
.l{
  margin-left: 10%;
}
.f{
  position: absolute;
  right: 10%;
}