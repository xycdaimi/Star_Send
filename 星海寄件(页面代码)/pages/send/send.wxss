/* pages/send/send.wxss */
.title{
  width: 90%;
  font-family: 'Pmzdqst';
  color: aqua;
  font-size: 30px;
  margin-bottom: 10rpx;
}

.block{
  height: 10vh;
  width: 92%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: rgba(142, 209, 248, 0.5);
  border-radius: 10px;
}
.shan{
  height: 50rpx;
  width: 50rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.p{
  height: 70vh;
  position: relative;
  display:flex;
  flex-direction: column;
}
.mokuai{
  width: 90%;
  height: 12vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: yellow 1px solid;
  position: relative;
}

.mokuai text{

  margin-left: 3%;
  color: yellow;
  font-size: 25px;
}
.e{
  position: absolute;
  right: 0;
}
.mokuai image{
  width: 55rpx;
  height: 55rpx;
  left: 0rpx; 
  top: 40rpx;
}

.butt{
  width: 100%;
  height: 5%;
}

.tu{
  margin: 0 auto;
  margin-left: 0px;
  height: 65%;
  width: 10%;
  border: yellow 2px solid;
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px;
  border-left: none;
  padding-right: 10rpx;
}
.tu image{
  margin-top: 25%;
  margin-left: 0px;
  margin-right: 0px;
  height:60%;
  width: 80%;
}

.inp{
  width: 75%;
  height: 65%;
  border: yellow 2px solid;
  border-right: none;
  border-top-left-radius: 20px;
  border-bottom-left-radius: 20px;
  margin: 0px auto;
  margin-left: 5%;
  margin-right: 0px;
  color: yellow;
  padding-left: 10px;
}

.placeholder-style{
  color: yellow;
}